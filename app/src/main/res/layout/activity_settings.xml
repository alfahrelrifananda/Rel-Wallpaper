<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.pages.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="?attr/collapsingToolbarLayoutMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/collapsingToolbarLayoutMediumSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@null"
                app:title=""
                app:titleTextColor="?attr/colorOnSurface">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/back_button_s"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="45dp"
                        android:layout_height="38dp"
                        app:icon="@drawable/ic_arrow_back_24"
                        app:iconSize="24dp"
                        app:iconGravity="textStart"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="24dp" />

                    <TextView
                        android:id="@+id/toolbar_title_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Settings"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.0"
                        android:visibility="invisible" />

                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null"
        android:scrollbarThumbHorizontal="@null"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/appearance_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Appearance"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorPrimary"
                  />

            <!-- Theme Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/theme_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/TopCornersCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/theme_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/theme_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_palette_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/theme_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Theme"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toStartOf="@+id/theme_arrow"
                        app:layout_constraintStart_toEndOf="@+id/theme_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/theme_icon_card" />

                    <TextView
                        android:id="@+id/theme_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Light, Dark, or System default"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/theme_arrow"
                        app:layout_constraintStart_toEndOf="@+id/theme_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/theme_title" />

                    <ImageView
                        android:id="@+id/theme_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:layout_constraintBottom_toBottomOf="@+id/theme_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/theme_icon_card"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dynamic Colors Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dynamic_colors_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                app:shapeAppearanceOverlay="@style/BottomCornerCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dynamic_colors_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/dynamic_colors_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_auto_awesome_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/dynamic_colors_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Dynamic Colors"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                         
                        app:layout_constraintEnd_toStartOf="@+id/dynamic_colors_switch"
                        app:layout_constraintStart_toEndOf="@+id/dynamic_colors_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/dynamic_colors_icon_card" />

                    <TextView
                        android:id="@+id/dynamic_colors_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Use colors from your wallpaper"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/dynamic_colors_switch"
                        app:layout_constraintStart_toEndOf="@+id/dynamic_colors_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/dynamic_colors_title" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/dynamic_colors_switch"
                        android:layout_width="wrap_content"
                        android:checked="true"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/dynamic_colors_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/dynamic_colors_icon_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Download Settings Section -->
            <TextView
                android:id="@+id/download_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Downloads"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorPrimary"
                  />

            <!-- Download Quality Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/download_quality_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/TopCornersCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/download_quality_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorTertiaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/download_quality_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_hd_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/download_quality_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Download Quality"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                         
                        app:layout_constraintEnd_toStartOf="@+id/download_quality_arrow"
                        app:layout_constraintStart_toEndOf="@+id/download_quality_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/download_quality_icon_card" />

                    <TextView
                        android:id="@+id/download_quality_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="High quality (Original)"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/download_quality_arrow"
                        app:layout_constraintStart_toEndOf="@+id/download_quality_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/download_quality_title" />

                    <ImageView
                        android:id="@+id/download_quality_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:layout_constraintBottom_toBottomOf="@+id/download_quality_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/download_quality_icon_card"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Auto Download Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/auto_download_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/auto_download_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorTertiaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/auto_download_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_download_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/auto_download_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Auto Download"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                         
                        app:layout_constraintEnd_toStartOf="@+id/auto_download_switch"
                        app:layout_constraintStart_toEndOf="@+id/auto_download_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/auto_download_icon_card" />

                    <TextView
                        android:id="@+id/auto_download_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Download favorites automatically"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/auto_download_switch"
                        app:layout_constraintStart_toEndOf="@+id/auto_download_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/auto_download_title" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/auto_download_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/auto_download_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/auto_download_icon_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Storage Location Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/storage_location_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/BottomCornerCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/storage_location_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorTertiaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/storage_location_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_folder_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/storage_location_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Storage Location"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                         
                        app:layout_constraintEnd_toStartOf="@+id/storage_location_arrow"
                        app:layout_constraintStart_toEndOf="@+id/storage_location_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/storage_location_icon_card" />

                    <TextView
                        android:id="@+id/storage_location_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Internal storage/Pictures/Wallpapers"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/storage_location_arrow"
                        app:layout_constraintStart_toEndOf="@+id/storage_location_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/storage_location_title" />

                    <ImageView
                        android:id="@+id/storage_location_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:layout_constraintBottom_toBottomOf="@+id/storage_location_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/storage_location_icon_card"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Privacy Section -->
            <TextView
                android:id="@+id/privacy_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Privacy &amp; Security"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorPrimary"
                  />

            <!-- Analytics Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analytics_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                app:shapeAppearanceOverlay="@style/TopCornersCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/analytics_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorSurfaceDim"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/analytics_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_analytics_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/analytics_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Usage Analytics"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                         
                        app:layout_constraintEnd_toStartOf="@+id/analytics_switch"
                        app:layout_constraintStart_toEndOf="@+id/analytics_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/analytics_icon_card" />

                    <TextView
                        android:id="@+id/analytics_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Help improve the app"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/analytics_switch"
                        app:layout_constraintStart_toEndOf="@+id/analytics_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/analytics_title" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/analytics_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/analytics_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/analytics_icon_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Clear Data Setting -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/clear_data_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/BottomCornerCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/clear_data_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorErrorContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/clear_data_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_delete_forever_24"
                            app:tint="?attr/colorOnErrorContainer" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/clear_data_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Clear All Data"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                         
                        app:layout_constraintStart_toEndOf="@+id/clear_data_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/clear_data_icon_card"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/clear_data_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Remove all downloaded wallpapers and preferences"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintTop_toBottomOf="@+id/clear_data_title"
                        app:layout_constraintStart_toEndOf="@+id/clear_data_icon_card"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
