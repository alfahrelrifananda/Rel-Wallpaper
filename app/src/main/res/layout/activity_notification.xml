<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.pages.NotificationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="?attr/collapsingToolbarLayoutMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/collapsingToolbarLayoutMediumSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@null"
                app:title=""
                app:titleTextColor="?attr/colorOnSurface">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/back_button_ns"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="45dp"
                        android:layout_height="38dp"
                        app:icon="@drawable/ic_arrow_back_24"
                        app:iconSize="24dp"
                        app:iconGravity="textStart"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="24dp" />

                    <TextView
                        android:id="@+id/toolbar_title_ns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Notifications"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.0"
                        android:visibility="invisible" />

                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="General Notifications"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorPrimary"
                   />

            <!-- Push Notifications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/push_notifications_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/TopCornersCardShape"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/push_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorTertiaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/push_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notifications_black_24dp"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/push_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Push Notifications"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                          
                        app:layout_constraintEnd_toStartOf="@+id/push_switch"
                        app:layout_constraintStart_toEndOf="@+id/push_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/push_icon_card" />

                    <TextView
                        android:id="@+id/push_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Receive notifications on your device"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/push_switch"
                        app:layout_constraintStart_toEndOf="@+id/push_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/push_title" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/push_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="@+id/push_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/push_icon_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Email Notifications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/email_notifications_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/BottomCornerCardShape"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/email_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorTertiaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/email_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_email_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/email_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Email Notifications"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                          
                        app:layout_constraintEnd_toStartOf="@+id/email_switch"
                        app:layout_constraintStart_toEndOf="@+id/email_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/email_icon_card" />

                    <TextView
                        android:id="@+id/email_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Get updates via email"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/email_switch"
                        app:layout_constraintStart_toEndOf="@+id/email_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/email_title" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/email_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:layout_constraintBottom_toBottomOf="@+id/email_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/email_icon_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="App Notifications"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorPrimary"
                   />

            <!-- Security Alerts -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/security_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="0dp"
                app:cardCornerRadius="32dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:strokeColor="@color/transparent"
                app:rippleColor="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/security_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        app:strokeColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/security_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_security_24"
                            app:tint="?attr/colorOnSurface" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/security_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Security Alerts"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSurface"
                          
                        app:layout_constraintEnd_toStartOf="@+id/security_switch"
                        app:layout_constraintStart_toEndOf="@+id/security_icon_card"
                        app:layout_constraintTop_toTopOf="@+id/security_icon_card" />

                    <TextView
                        android:id="@+id/security_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="Important security notifications"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textFontWeight="300"
                        app:layout_constraintEnd_toStartOf="@+id/security_switch"
                        app:layout_constraintStart_toEndOf="@+id/security_icon_card"
                        app:layout_constraintTop_toBottomOf="@+id/security_title" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/security_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="@+id/security_icon_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/security_icon_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
