<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_screen_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            app:shapeAppearanceOverlay="@style/TopCornersCardShape"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:strokeColor="@color/transparent"
            app:rippleColor="?attr/colorPrimary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/home_icon_card"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorTertiaryContainer"
                    app:strokeColor="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/home_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_home_black_24dp"
                        app:tint="?attr/colorOnSurface" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/home_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="Home Screen"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textFontWeight="600"
                    app:layout_constraintEnd_toStartOf="@+id/home_radio"
                    app:layout_constraintStart_toEndOf="@+id/home_icon_card"
                    app:layout_constraintTop_toTopOf="@+id/home_icon_card" />

                <TextView
                    android:id="@+id/home_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:text="Show only on home screen"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textFontWeight="300"
                    app:layout_constraintEnd_toStartOf="@+id/home_radio"
                    app:layout_constraintStart_toEndOf="@+id/home_icon_card"
                    app:layout_constraintTop_toBottomOf="@+id/home_title" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/home_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:layout_constraintBottom_toBottomOf="@+id/home_icon_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/home_icon_card" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lock_screen_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:strokeColor="@color/transparent"
            app:rippleColor="?attr/colorPrimary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/lock_icon_card"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorTertiaryContainer"
                    app:strokeColor="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/lock_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_lock_24"
                        app:tint="?attr/colorOnSurface" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/lock_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="Lock Screen"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textFontWeight="600"
                    app:layout_constraintEnd_toStartOf="@+id/lock_radio"
                    app:layout_constraintStart_toEndOf="@+id/lock_icon_card"
                    app:layout_constraintTop_toTopOf="@+id/lock_icon_card" />

                <TextView
                    android:id="@+id/lock_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:text="Show only on lock screen"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textFontWeight="300"
                    app:layout_constraintEnd_toStartOf="@+id/lock_radio"
                    app:layout_constraintStart_toEndOf="@+id/lock_icon_card"
                    app:layout_constraintTop_toBottomOf="@+id/lock_title" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/lock_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:layout_constraintBottom_toBottomOf="@+id/lock_icon_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/lock_icon_card" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/both_screens_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            app:shapeAppearanceOverlay="@style/BottomCornerCardShape"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:strokeColor="@color/transparent"
            app:rippleColor="?attr/colorPrimary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/both_icon_card"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer"
                    app:strokeColor="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/both_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_phone_android_24"
                        app:tint="?attr/colorOnSurface" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/both_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="Both Screens"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textFontWeight="600"
                    app:layout_constraintEnd_toStartOf="@+id/both_radio"
                    app:layout_constraintStart_toEndOf="@+id/both_icon_card"
                    app:layout_constraintTop_toTopOf="@+id/both_icon_card" />

                <TextView
                    android:id="@+id/both_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:text="Show on both lock and home screens"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textFontWeight="300"
                    app:layout_constraintEnd_toStartOf="@+id/both_radio"
                    app:layout_constraintStart_toEndOf="@+id/both_icon_card"
                    app:layout_constraintTop_toBottomOf="@+id/both_title" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/both_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintBottom_toBottomOf="@+id/both_icon_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/both_icon_card" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_wallpaper_button"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Set Wallpaper" />

</LinearLayout>